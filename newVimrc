  set undofile
  set undodir=~/.vim/undo
  set undolevels=1000
  set undoreload=10000
  " Create undo directory if it doesn't exist
  if !isdirectory(expand('~/.vim/undo'))
    call mkdir(expand('~/.vim/undo'), 'p')
